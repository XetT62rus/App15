                    <Table.Columns>
                        <TableColumn Width="0.5*"/>
                        <TableColumn Width="*"/>
                        <TableColumn Width="2*"/>
                    </Table.Columns>
                    <TableRowGroup>
                        <TableRow>
                            <TableCell>
                                <Paragraph>
                                    № п/п
                                </Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph>
                                   Название
                                </Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph>
